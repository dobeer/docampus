<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    
    <item  android:state_pressed="false">
        
        <shape>  
            <gradient  
                android:startColor="#ffffff"  
                android:endColor="#ffffff"  
                android:angle="0" />  
            <stroke  
                android:width="2dp"  
                android:color="#000000" />  
            <corners  
                android:radius="1000dp" />  
            <padding  
                android:left="1dp"  
                android:top="1dp"  
                android:right="1dp"  
                android:bottom="1dp" />  
        </shape>  
        
    </item>
    <item  android:state_pressed="true">
        
           <shape>  
            <gradient  
                android:startColor="#73c1bf"  
                android:endColor="#73c1bf"  
                android:angle="0" />  
            <stroke  
                android:width="3dp"  
                android:color="#000000" />  
            <corners  
                android:radius="1000dp" />  
            <padding  
                android:left="1dp"  
                android:top="1dp"  
                android:right="1dp"  
                android:bottom="1dp" />  
        </shape>  
        
    </item>

  
</selector>  