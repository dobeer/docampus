<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    
    <item  android:state_pressed="false">
        
        <shape>  
            <gradient  
                android:startColor="#55b9c3d9"  
                android:endColor="#55b9c3d9"  
                android:angle="0" />  
            <stroke  
                android:width="0dp"  
                android:color="#d6d6d6" />  
            <corners  
                android:radius="5dp" />  
            <padding  
                android:left="0dp"  
                android:top="0dp"  
                android:right="0dp"  
                android:bottom="0dp" />  
        </shape>  
        
    </item>
    <item  android:state_pressed="true">
        
           <shape>  
            <gradient  
                android:startColor="#cc95aee3"  
                android:endColor="#cc95aee3"  
                android:angle="0" />  
            <stroke  
                android:width="0dp"  
                android:color="#d6d6d6" />  
            <corners  
                android:radius="5dp" />  
            <padding  
                android:left="0dp"  
                android:top="0dp"  
                android:right="0dp"  
                android:bottom="0dp" />  
        </shape>  
        
    </item>

  
</selector>  