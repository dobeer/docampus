<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/llZan"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/btn_style_blogcard_zan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivZan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/icon_like" />

        <TextView
            android:id="@+id/tvZanCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_greyblue"
            android:textSize="12sp"
            android:text="14" />

    </LinearLayout>

    
        <LinearLayout
        android:id="@+id/llTrans"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/btn_style_blogcard_zan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivTrans"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/icon_forward" />

        <TextView
            android:id="@+id/tvTransCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_greyblue"
            android:textSize="12sp"
            android:text="14" />

    </LinearLayout>
            <LinearLayout
        android:id="@+id/llCmt"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/btn_style_blogcard_zan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivCmt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/icon_comment" />

        <TextView
            android:id="@+id/tvCmtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_greyblue"
            android:textSize="12sp"
            android:text="14" />

    </LinearLayout>
    </LinearLayout>

