<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dark_bg_grey" />
    
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >
    
    <ImageButton
        android:id="@+id/btEmotion"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_width="36dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/btn_emotion"
        android:background="@android:color/transparent" />
    
    <ImageButton
        android:id="@+id/btAt"
        android:layout_toRightOf="@+id/btEmotion"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_width="36dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/btn_at"
        android:background="@android:color/transparent" />

    <com.doschool.component.atemotion.BlogEditText
        android:id="@+id/metText"
        android:background="@drawable/textfield_gray"
        android:layout_toRightOf="@+id/btAt"
        android:layout_toLeftOf="@+id/mtvSend"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textSize="16sp"
        android:textColor="@color/zd_black"
        android:maxLines="5" >

    </com.doschool.component.atemotion.BlogEditText>

    <Button
        android:id="@+id/mtvSend"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_common_blue"
        android:padding="0dp"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="评论" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/downLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>
    
</LinearLayout>