<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/selector_cmt_item_bg"
    android:paddingBottom="16dp" >

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/emotion_1020" />

    <TextView
        android:id="@+id/tvSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivHead"
        android:paddingTop="22dp"
        android:layout_marginLeft="8dp"
        android:textSize="15sp"
        android:singleLine="true"
        android:maxEms="12"
        android:text="SUB" />

        <TextView
        android:id="@+id/tvReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvSub"
        android:layout_marginLeft="8dp"
        android:paddingTop="22dp"
        android:textSize="15sp"
        android:textColor="@color/dark_bg_grey"
        android:text="回复" />
        
        <TextView
        android:id="@+id/tvObj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvReply"
        android:layout_marginLeft="8dp"
        android:paddingTop="22dp"
        android:textSize="15sp"
        android:singleLine="true"
        android:maxEms="12"
        android:text="OBJ" />

        <TextView
            android:id="@+id/tvCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvSub"
            android:layout_below="@+id/tvSub"
        android:layout_marginTop="6dp"
            android:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:textColor="@color/zd_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvFloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/fzd_grey"
            android:textSize="10sp"
            android:text="3楼" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvFloor"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_bg_grey"
            android:textSize="10sp"
            android:text="21:00" />
        
        
        <ImageView
            android:id="@+id/ivDivide"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/fzd_grey" />
        
</RelativeLayout>