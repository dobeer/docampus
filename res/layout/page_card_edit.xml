<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pageEditCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/pageEditCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/pageEditCardHeadXImg"
            android:layout_width="@dimen/pageEditCardHeadXimgSize"
            android:layout_height="@dimen/pageEditCardHeadXimgSize"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:id="@+id/pageEditCardNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pageEditCardNameLabelTxt"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/pageEditCardNameLabelTxt"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pageEditCardNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageEditCardNickLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pageEditCardNickLabelTxt"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/pageEditCardNickLabelTxt"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pageCardEditNickEdtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:hint="@string/pageEditCardNickEdtxt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageCardEditPhoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pageCardEditPhoneLabelTxt"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/pageEditCardPhoneLabelTxt"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pageCardEditPhoneEdtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:hint="@string/pageEditCardPhoneEdtxt"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageCardEditQqLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pageCardEditQqLabelTxt"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/pageEditCardQqLabelTxt"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pageCardEditQqEdtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:hint="@string/pageEditCardQqEdtxt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageCardEditMailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pageCardMailLabelTxt"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/pageEditCardMailLabelTxt"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pageCardEditMailEdtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:gravity="right|center_vertical"
                android:hint="@string/pageEditCardMailEdtxt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pageCardEditIntroduceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pageCardEditIntroduceLabelTxt"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="@string/pageEditCardIntroduceLabelTxt"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pageCardEditIntroduceEdtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:hint="@string/pageEditCardIntroduceEdtxt" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>